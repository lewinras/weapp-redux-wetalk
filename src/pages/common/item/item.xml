<template name="talks-item">
    <block wx:for="{{list}}" wx:key="this*">
        <view class="talks-item">
            <text class="title font-normal font-deep">{{item.title}}</text>
            <view class="oractor">
                <text class="font-normal font-deep">{{item.oractor.name}}</text>
                <block wx:for="{{item.oractor.tags}}" wx:key="this*">
                    <text class="font-light font-thick"> | {{item}}</text>
                </block>
            </view>
            <view class="bottom">
                <image class="avatar" src="{{item.oractor.avatar}}?imageView2/2/w/60/h/60"></image>
                <view style="background-color:{{item.product.price>0? '#2fbd83':'#4a90e2'}}"class="voice-bar">
                    <text class="voice-text font-thick">{{item.product.price>0? '1元收听' : '限时免费'}}</text>
                </view>
                
            </view>
        </view>
    </block>
    <view class="footbar">
        <view wx:if="{{ hasMore&&list.length != 0 }}">
            <image src="/images/loading.gif" mode="aspectFill"/>
            <text>玩了命的加载中...</text>
        </view>
        <view wx:elif="{{list.length != 0}}">
            <text>没有更多内容了</text>
        </view>

    </view>
</template>