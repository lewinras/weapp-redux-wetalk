<view class="container">
    <scroll-view scroll-y="true" class="container" bindscrolltolower="handleLoadMore">
        <view class="detail-info">
            <image src="{{oractor.avatar}}?imageView2/2/w/80/h/80"/>
            <text class="title font-normal font-deep">{{title}}</text>
            <text class="name font-normal font-deep">{{oractor.name}}</text>
            <view wx:if="{{oractor.tags.length}}" class="tags">
                <block wx:for="{{oractor.tags}}" wx:key="this*">
                    <text wx:if="{{index > 0}}" class="font-light font-thick info">| {{item}}</text>
                    <text wx:else class="font-light info">{{item}}</text>
                </block>
                <view class="container2">
                    <view class="divider1"/>
                </view>
            </view>
            <view class="font-deep font-thick description">{{oractor.description}}</view>
            <view class="container1 font-light font-thick">
                <view class="font-green">{{participant_num}}</view>人已参加
            </view>
            <view class="button">
                <view wx:if="{{!locked}}" class="locked">已解锁以下全部内容</view>
                <view wx:elif="{{product.price > 0}}">
                    {{'赞助'+product.price+'元解锁以下全部内容'}}
                </view>
                <view wx:else class="unlocked-free">限时免费解锁以下全部内容</view>
            </view>
        </view>
        <view wx:if="{{answer_type === 'voice'}}" class="audio-list">
            <block wx:for="{{questions.items}}" wx:key="this*">
                <text class="title font-deep font-thick">{{item.content}}</text>
                <view class="container1">
                    <image class="avatar" src="{{oractor.avatar}}?imageView2/2/w/50/h/50"/>
                    <view style="width:{{item.answers_length > 60? '200px' : '120px'}}">
                        <view style="background-color:{{item.locked ? '#9ba3b4' : '#2fbd83'}}" class="audio">
                        </view>
                    </view>
                    <text class="audio-length font-light font-thick">{{audio_lengths[index]}}</text>
                </view>
                <view class="divider1"/>
            </block>
        </view>
        <view wx:if="{{questions.isEnd}}" class="comment-list">
            <view class="item">
                <image class="avatar" src="{{oractor.avatar}}?imageView2/2/w/60/h/60"/>
                <view class="container1">
                    <text class="name font-light font-normal">{{oractor.name}} (小讲师)</text>
                    <text class="content font-thick font-deep">欢迎大家向我提问，一起讨论，点击此留言回复我吧。 关注二维码可以收到回复通知</text>
                    <image class="qrcode"
                           src="http://cdn-img.duilu.me/b2ed6d06481d2cb6d8b79a57746991f6?imageView2/2/w/330/h/330"/>
                </view>
            </view>
            <view class="divider1"/>
            <block wx:for="{{comments.items}}" wx:key="this*">
                <view class="item">
                    <image class="avatar" src="{{item.user.avatar}}?imageView2/2/w/60/h/60"/>
                    <view class="container1">
                        <text class="name font-light font-normal">{{item.user.name}}</text>
                        <text class="content font-thick font-deep">{{item.content}}</text>
                        <view wx:if="{{item.parent.user}}" wx:key="this*" class="container2">
                            <text class="name2 font-light font-normal">{{item.parent.user.name}}</text>
                            <text class="content2 font-thick font-deep">{{item.parent.content}}</text>
                        </view>
                    </view>
                </view>
                <view class="divider1"/>
            </block>
        </view>
    </scroll-view>
    <view class="detail-bottom-bar">
        <view class="all font-deep">全部小讲</view>
        <view class="comment">参与讨论</view>
    </view>
</view>